<div>
    <h3 id="redirect-text" hidden>Your activity has been added, please wait to be redirected!</h3>
    <form id="add-activity-form" action="/users/addActivity" method="POST" class="add-activity-form">

        <label for="exerciseType">Exercise Date</label>
        <input type="date" id="exerciseDate" name="exerciseDate" placeholder="Date" />

        <label for="goal">Goal</label>
        <select name="goal" placeholder="goal">
            {{#each goalSelects}}
            <option value={{this.[0]}}>{{this.[1]}}</option>
            {{/each}}
        </select>

        <label for="exercise">Exercise</label>
        <input type="text" id="exercise" name="exercise" placeholder="Bench Press" />

        <label for="amount">Exercise Amount</label>
        <input type="number" step="0.01" id="amount" name="amount" placeholder="123" />

        <label for="description">Description</label>
        <input type="text" id="description" name="description" placeholder="My Notes" />

        <button type="button" onclick="location.href='/home'">Back</button>
        <button type="submit">Add New Activity</button>
    </form>
</div>

<script src=" http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script src="../public/js/addActivity.js"></script>